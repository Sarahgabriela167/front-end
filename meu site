<script>
  // Navega√ß√£o das abas
  const navBtns = document.querySelectorAll('.nav-btn');
  const sections = document.querySelectorAll('.content-section');

  navBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      navBtns.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      sections.forEach(sec => sec.style.display = 'none');
      document.getElementById(btn.dataset.section).style.display = 'block';
    });
  });

  // Devocionais di√°rios (exemplo de 10 dias, pode ampliar)
  const devocionais = [
    { dia: 1, versiculo: "Filipenses 4:13", mensagem: "Tudo posso naquele que me fortalece." },
    { dia: 2, versiculo: "Salmos 46:1", mensagem: "Deus √© nosso ref√∫gio e fortaleza, socorro bem presente na ang√∫stia." },
    { dia: 3, versiculo: "Prov√©rbios 3:5", mensagem: "Confia no Senhor de todo o teu cora√ß√£o e n√£o te estribes no teu pr√≥prio entendimento." },
    { dia: 4, versiculo: "Isa√≠as 40:31", mensagem: "Os que esperam no Senhor renovar√£o as for√ßas, subir√£o com asas como √°guias." },
    { dia: 5, versiculo: "Jeremias 29:11", mensagem: "Eu sei os planos que tenho para voc√™s, planos de paz e n√£o de mal." },
    { dia: 6, versiculo: "Romanos 8:28", mensagem: "Todas as coisas cooperam para o bem daqueles que amam a Deus." },
    { dia: 7, versiculo: "Salmos 23:1", mensagem: "O Senhor √© meu pastor; nada me faltar√°." },
    { dia: 8, versiculo: "Jo√£o 14:27", mensagem: "Deixo-vos a paz; a minha paz vos dou; n√£o vo-la dou como o mundo a d√°." },
    { dia: 9, versiculo: "Mateus 11:28", mensagem: "Venham a mim, todos os que est√£o cansados e sobrecarregados, e eu lhes darei descanso." },
    { dia: 10, versiculo: "2 Cor√≠ntios 12:9", mensagem: "A minha gra√ßa te basta, pois o meu poder se aperfei√ßoa na fraqueza." }
  ];

  let indexDevocional = 0;

  const diaElem = document.getElementById('devocional-dia');
  const versiculoElem = document.getElementById('devocional-versiculo');
  const mensagemElem = document.getElementById('devocional-mensagem');
  const btnPrev = document.getElementById('btn-prev');
  const btnNext = document.getElementById('btn-next');

  function atualizarDevocional() {
    const dev = devocionais[indexDevocional];
    diaElem.textContent = `Dia ${dev.dia}`;
    versiculoElem.textContent = dev.versiculo;
    mensagemElem.textContent = dev.mensagem;

    btnPrev.disabled = (indexDevocional === 0);
    btnNext.disabled = (indexDevocional === devocionais.length - 1);
  }

  btnPrev.addEventListener('click', () => {
    if(indexDevocional > 0) {
      indexDevocional--;
      atualizarDevocional();
    }
  });

  btnNext.addEventListener('click', () => {
    if(indexDevocional < devocionais.length - 1) {
      indexDevocional++;
      atualizarDevocional();
    }
  });

  atualizarDevocional();

  // Pesquisa simples por devocionais
  const searchForm = document.getElementById('search-form');
  searchForm.addEventListener('submit', e => {
    e.preventDefault();
    const termo = searchForm.q.value.trim().toLowerCase();
    if (!termo) return;

    const encontrado = devocionais.find(dev => 
      dev.mensagem.toLowerCase().includes(termo) || 
      dev.versiculo.toLowerCase().includes(termo));

    if (encontrado) {
      indexDevocional = devocionais.indexOf(encontrado);
      atualizarDevocional();
      alert(`Devocional encontrado: Dia ${encontrado.dia} - ${encontrado.versiculo}`);
    } else {
      alert('Nenhum devocional encontrado para esse termo.');
    }
  });
</script>
